FROM node:22-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    git \
    curl \
    jq \
    gcc \
    python3-dev \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Give node user sudo permissions
RUN echo "node ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/node && \
    chmod 0440 /etc/sudoers.d/node

# Set up Node.js environment
ENV NODE_ENV=development
ENV PATH="/home/node/.local/bin:${PATH}"

# Create workspace directory and set permissions
WORKDIR /workspace
RUN mkdir -p /workspace/backend && \
    chown -R node:node /workspace

# Create and activate Python virtual environment
RUN mkdir -p /workspace/backend/.venv && \
    python3 -m venv /workspace/backend/.venv && \
    chown -R node:node /workspace/backend/.venv
ENV PATH="/workspace/backend/.venv/bin:${PATH}"

# Install Python development tools in the virtual environment
RUN pip install --no-cache-dir \
    uv \
    black \
    pylint \
    mypy

# Switch to node user
USER node

# Default command (can be overridden by docker-compose)
CMD ["sleep", "infinity"] 